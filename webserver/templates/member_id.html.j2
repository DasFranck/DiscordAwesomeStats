{% extends "graph_pages.html.j2" %}

{% block content %}
<div class="d-flex justify-content-center">
    <h1 class="display-1">{{member_name}}#{{member_discriminator}}</h1> 
</div>
<br>
{% for guild in active_channels_guilds.keys() %}
<div class="d-flex justify-content-center">
    <h2 class="display-3">{{guild[1]}}</h2> 
</div>
    {% for channel in active_channels_guilds[guild] %}
        {% set message_count_per_date = message_count_per_date_dict[channel[0]] %}
        {% set message_count_per_month = message_count_per_month_dict[channel[0]] %}
<div class="container">
    <canvas id="dailyGuildChart-{{channel[0]}}"></canvas>
    <br>
    <canvas id="monthlyGuildChart-{{channel[0]}}"></canvas>
    <br>
</div>

<script>
var dailyGuildChartctx = document.getElementById('dailyGuildChart-{{channel[0]}}');
var dailyGuildChart = new Chart(dailyGuildChartctx, {
    type: 'line',
    data: {
        labels: {{ message_count_per_date.keys() | list }},
        datasets: [{
            responsive: true,
            data: {{ message_count_per_date.values() | list }},
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
            ],
            tension: 0.1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        },
        elements: {
            point: {
                radius: 0.1
            }
        },
        plugins: {
            legend: {
                display: false
            },
            title: {
                display: true,
                text: "Message Count per Day on {{channel[1]}}"
            },
            tooltip: {
                displayColors: false,
                callbacks: {
                    label: function(context) {
                        return context.parsed.y + " messages";
                    }
                }
            }
        },
        interaction: {
            mode: "index",
            intersect: false
        }
    }
});
var monthlyGuildChartctx = document.getElementById('monthlyGuildChart-{{channel[0]}}');
var monthlyGuildChart = new Chart(monthlyGuildChartctx, {
    type: 'line',
    data: {
        labels: {{ message_count_per_month.keys() | list }},
        datasets: [{
            responsive: true,
            data: {{ message_count_per_month.values() | list }},
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
            ],
            tension: 0.4
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        },
        elements: {
            point: {
                radius: 0.1
            }
        },
        plugins: {
            legend: {
                display: false
            },
            title: {
                display: true,
                text: "Message Count per Month on {{channel[1]}}"
            },
            tooltip: {
                displayColors: false,
                callbacks: {
                    label: function(context) {
                        return context.parsed.y + " messages";
                    }
                }
            }
        },
        interaction: {
            mode: "index",
            intersect: false
        }
    }
});
</script>
<br>
    {% endfor %}
{% endfor %}
{% endblock content %}